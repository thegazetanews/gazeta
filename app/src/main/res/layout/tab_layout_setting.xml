<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:background="#40E0F2F1"
        android:padding="8dp"
        android:text="Tab Mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/tabModeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:checked="true"
            android:id="@+id/fixed"
            android:text="Fixed"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:id="@+id/scrollable"
            android:text="Scrollable"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>


    <TextView
        android:background="#40E0F2F1"
        android:padding="8dp"
        android:text="Tab Gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/tabGravityRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:checked="true"
            android:id="@+id/center"
            android:text="Center"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:id="@+id/fill"
            android:text="Fill"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:background="#40E0F2F1"
        android:padding="8dp"
        android:text="Tab Display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/tabDisplayRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:id="@+id/tabicon"
            android:text="Show tab icon"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:checked="true"
            android:id="@+id/tabtitle"
            android:text="Show tab title"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.andnet.gazeta.ui.Componenet.CustomRadioButton
            android:id="@+id/tabboth"
            android:text="Show both tab icon and title"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>

</LinearLayout>